.row
  .span12
    %table
      %tr
        %th Name
        %th Address
        %th
        %th City
        %th State
        %th Zip
        %th
        %th{:style => "width: 220px"}
      - @locations.each do |location| 
        %tr
          %td= location.name
          %td= location.address1
          %td= location.address2
          %td= location.city
          %td= location.state
          %td= location.zip
          %td
            %div{:class => (location.hidden ? 'label label-important' : '')}
              = (location.hidden ? 'Hidden' : '')
          %td
            .btn-group
              = link_to 'Show', location, :class => 'btn btn-info'
              = link_to 'Edit', edit_location_path(location), :class => 'btn btn-primary'
              = link_to 'Destroy', location, confirm: 'Are you sure?', method: :delete, :class=>'btn btn-danger'
            

             

= link_to 'Suggest New Location', new_location_path
