.container
  .content
    .page-header
      = image_tag  'logo_small.png', :id => 'logo'
      %h1 New Work Austin
    .row
      .span12
        - for i in (1..(@companies.length().to_f() / 3).ceil)
          .row
            - @companies.slice((i - 1) * 3, 3).each do |company|
              .span4.menu-img.clearfix
                = image_tag  company.logo.url(:normal), :class => 'logo', :url => company.logo.url(:normal)
                .darkener
                  = image_tag 'darkener.png'
                  .description
                    %span.dyntextval
                      = company.description
                %div{:class => 'company-name hl' + i.to_s}
                  %span.dyntextval
                    = company.name
                .company-name-alt
                  = link_to 'Details', company
                  |
                  %a{:href => (company.company_url.length > 0 ? company.company_url[0].url : ''), :target => '_new'}
                    Link
                    
        %table
          %tr
            %th Name
            %th Description
            %th
            %th
            %th
          - @companies.each do |company|
            %tr
              %td= company.name 
              %td= company.description 
              %td= link_to 'Show', company 
              %td= link_to 'Edit', edit_company_path(company) 
              %td= link_to 'Delete', company, confirm: 'Are you sure you want to delete this?', method: :delete
      .span4              
        .well
          %h5 Austin Chronicle
          %ul
            %li Story 1
            %li Story 2
            %li Story 3
          %h5 Austin Theater Review
          %ul
            %li Story 1
            %li Story 2
            %li Story 3
               

