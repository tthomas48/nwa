.row
  .span12
    %table
      %tr
        %th Name
        %th Description
        %th
        %th{:style => "width: 220px"}
      - @companies.each do |company|
        %tr
          %td= company.name 
          %td= company.description 
          %td
            %div{:class => (company.hide ? 'label label-important' : '')}
              = (company.hide ? 'Hidden' : '')
          %td
            .btn-group
              = link_to 'Show', company, :class => 'btn btn-info'
              = link_to 'Edit', edit_company_path(company), :class => 'btn btn-primary'
              = link_to 'Alias', alias_company_path(company), :class => 'btn btn-primary'
              = link_to 'Delete', company, confirm: 'Are you sure you want to delete this?', method: :delete, :class=>'btn btn-danger'
.row
  .actionbar.btn-group.well
    = link_to 'Back', companies_path, {:class => 'btn-primary btn'}
    = link_to('Logout', destroy_admin_session_path, :method => :delete, :class => 'btn-danger btn')
