<%= form_for(@company, :html => {:multipart => true}) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Company</legend>


  <div class="field clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :logo %>
    <div class="input">
      <%= f.file_field :logo %>
    </div>
  </div>
    <div id="company_urls">
      <fieldset>
      <legend>Urls</legend>
      <div class="container">
      <%= f.nested_fields_for :company_url do |ci_form| %>
        <div class="item">
        <div class="clearfix">
          <%= ci_form.label :url %>
          <div class="input">
            <%= ci_form.text_field :url, :class => "span3"%>
            <a href="#" class="remove btn small danger">remove</a>
          </div>
        </div>

        <%= ci_form.hidden_field :id %>
        <%= ci_form.hidden_field :_destroy %>
        </div>
      <% end %>
      </div>
      </fieldset>
      <a href="#" class="add btn small success">Add Url</a>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>
  </fieldset>
<% end %>
<script type="text/javascript">
$(document).ready(function(e) {
  $('FORM').nestedFields();
});
</script>

